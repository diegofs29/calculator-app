<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Calculator keyboard-->
    <style name="CalculatorButton">
        <item name="android:height">75dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NumberButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/ashGray</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/moonstone</item>
    </style>

    <style name="EqualsButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/darkSpringGreen</item>
    </style>

    <style name="DeleteButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/lightRed</item>
    </style>

    <!--Calculator result screen-->
    <style name="CalculatorResultTextView">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="OperationTextView" parent="CalculatorResultTextView">
        <item name="android:height">48dp</item>
        <item name="android:width">350dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="ResultTextView" parent="CalculatorResultTextView">
        <item name="android:height">84dp</item>
        <item name="android:width">350dp</item>
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>