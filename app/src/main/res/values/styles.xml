<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton">
        <item name="android:height">75dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NumberButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/ashGray</item>
    </style>

    <style name="OperatorButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/moonstone</item>
    </style>

    <style name="EqualsButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/darkSpringGreen</item>
    </style>

    <style name="DeleteButton" parent="CalculatorButton">
        <item name="android:backgroundTint">@color/lightRed</item>
    </style>
</resources>